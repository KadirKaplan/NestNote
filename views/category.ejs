          </ul>
          
        </div>
      </nav>
      <div class="container" style="padding-top: 100px;">
        


        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <button
                    type="button"
                    class="btn btn-primary btn-sm"
                    style="background-color: #1ABB9C;"
                    data-toggle="modal"
                    data-target="#addCategory"
                    data-placement="top" 
                    title="Yeni Banka Oluştur"
                  >
                   Yeni Kategori
                  </button>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
             <li class="nav-item">
              <ul class="nav-link" >Kategoriler</ul>
             </li>
             <% for (i=0; i< categories.length; i++) { %> 
              <li class="nav-item ">   
                <a class="nav-link" href="#"><%= categories[i].categoryTitle %> </a>
              </li>
              <%  } %>
            </ul>
            
          </div>

        </nav>
        <br>
       
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          
        </form>
        <br>
        <button
        type="button"
        class="btn btn-primary btn-sm"
        style="background-color: #1ABB9C;"
        data-toggle="modal"
        data-target="#addNote"
        data-placement="top" 
        title="Yeni Banka Oluştur"
      >
       Not Oluştur
      </button>
      <% for (i=0; i< notes.length; i++) { %> 
        <form >
          
          <div class="list-group">
          
            <a href="#"   data-toggle="modal" data-placement="bottom" title="İncele" data-target="#examineNote<%=notes[i]._id %>"class="list-group-item list-group-item-action "><%= i+1 %>.<%= notes[i].noteTitle %> <span style="float: right"><%= notes[i].nodeDate %></span> </a>
          
          
          </div>
         
        </form>
          <!-- examine note -->
          <div class="modal fade" id="examineNote<%=notes[i]._id %>" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-xl">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id=""><strong>Kategori Ekle</strong></h5>
                  
                </div>
                <div class="modal-body">
                  <form method="GET" action="/note/<%=notes[i]._id %>">
                    
                    <div class="col-md-12">
                      <label for="exampleInputEmail1" class="form-label">Not Başlık</label>
                      <input type="text" class="form-control" value="<%=notes[i].noteTitle%>"  aria-describedby="emailHelp">
                      
                    </div>
                    <div class="col-md-12">
                     <label for="" class="form-label">Not Açıklama</label>
                    <textarea name=""  class="summernote" cols="30" rows="10"><%=notes[i].noteDescription %></textarea>
                      
                    </div>
                  
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-secondary btn-sm" data-dismiss="modal" aria-hidden="true">Kapat</button>
                      <button type="submit"  style="background-color: #1ABB9C;" class="btn btn-primary btn-sm">Güncelle</button>
                    </div>
                    
                  </form>
                </div>
                
              </div>
            </div>
          </div>
        <%  } %>

    </div>
    
   
  <!-- Add Categoryy -->
  <div class="modal fade" id="addCategory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><strong>Kategori Ekle</strong></h5>
          
        </div>
        <div class="modal-body">
          <form method="POST" action="/category">
            <div class="col-md-12">
              <label for="exampleInputEmail1" class="form-label"> Kodu</label>
              <input  type="text" class="form-control" name = "categoryCode"  aria-describedby="emailHelp">
              
            </div>
            <div class="col-md-12">
              <label for="exampleInputEmail1" class="form-label">Kategori Başlık</label>
              <input type="text" class="form-control" name="categoryTitle"  aria-describedby="emailHelp">
              
            </div>
            <div class="col-md-12">
              <label for="exampleInputEmail1" class="form-label">Kategori Açıklama</label>
              <input type="text" class="form-control" name="categoryDescription"  aria-describedby="emailHelp">
              
            </div>
          
          
            <div class="modal-footer">
              <button type="submit" class="btn btn-secondary" data-dismiss="modal" aria-hidden="true">Kapat</button>
              <button type="submit"  style="background-color: #1ABB9C;" class="btn btn-primary">Kaydet</button>
            </div>
            
          </form>
        </div>
        
      </div>
    </div>
  </div>
 <!-- Add Note -->

  <div class="modal fade" id="addNote" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><strong>Not Oluştur</strong></h5>
          
        </div>
        <div class="modal-body">
          <form method="POST" action="/note">
            <div class="col-md-12">
              <label for="exampleInputEmail1" class="form-label"> Kodu</label>
              <input  type="text" class="form-control" name = "noteCode"  aria-describedby="emailHelp">
               
            </div>
            <div class="col-md-12">
              <label for="exampleInputEmail1" class="form-label">Not Başlık</label>
              <input type="text" class="form-control" name="noteTitle"  aria-describedby="emailHelp">
              
            </div>
            <div class="col-md-12">
              <label for="exampleInputEmail1" class="form-label">Kategori</label>
              <select class="form-select" aria-label="Default select example">
                <% for (i=0; i< categories.length; i++) { %> 
                <option value="<%= categories[i]._id %>"><%= categories[i].categoryTitle %></option>
                <%  } %>
              </select>
              
            </div>
            <div class="col-md-12">
              <label for="exampleInputEmail1" class="form-label">Not Açıklama</label>
             <textarea name="noteDescription" class="summernote" cols="30" rows="10">

             </textarea>
              
            </div>
            
          
          
            <div class="modal-footer">
              <button type="submit" class="btn btn-secondary btn-sm" data-dismiss="modal" aria-hidden="true">Kapat</button>
              <button type="submit"  style="background-color: #1ABB9C;" class="btn btn-primary btn-sm">Kaydet</button>
            </div>
            
          </form>
        </div>
        
      </div>
    </div>
  </div>




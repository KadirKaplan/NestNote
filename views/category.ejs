        </button>
      
      </nav>
      <div class="container" style="padding-top: 100px;">
        


        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <button
                    type="button"
                    class="btn btn-primary btn-sm"
                    style="background-color: #1ABB9C;"
                    data-toggle="modal"
                    data-target="#addCategory"
                    data-placement="top" 
                    title="Yeni Banka Oluştur"
                  >
                   Yeni Kategori
                  </button>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
             <li class="nav-item">
              <ul class="nav-link" >Kategoriler</ul>
             </li>
             <% for (i=0; i< categories.length; i++) { %> 
              <li class="nav-item ">   
                <a class="nav-link" href="#"><%= categories[i].categoryTitle %> </a>
              </li>
              <%  } %>
            </ul>
            
          </div>

        </nav>
        <br>
       
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          
        </form>
        <br>
        <button
        type="button"
        class="btn btn-primary btn-sm"
        style="background-color: #1ABB9C;"
        data-toggle="modal"
        data-target="#addNote"
        data-placement="top" 
        title="Yeni Banka Oluştur"
      >
       Not Oluştur
      </button>
        <form >
          <div class="list-group">
            <% for (i=0; i< categories.length; i++) { %> 
            <a href="#" class="list-group-item list-group-item-action "><%= categories[i].categoryCode %>.<%= categories[i].categoryTitle %> </a>
            <%  } %>
          </div>
        </form>
        

    </div>
    
   
  <!-- Add Modal -->
  <div class="modal fade" id="addCategory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><strong>Kategori Ekle</strong></h5>
          
        </div>
        <div class="modal-body">
          <form method="POST" action="/category">
            <div class="col-md-12">
              <label for="exampleInputEmail1" class="form-label"> Kodu</label>
              <input  type="text" class="form-control" name = "categoryCode"  aria-describedby="emailHelp">
              
            </div>
            <div class="col-md-12">
              <label for="exampleInputEmail1" class="form-label">Kategori Başlık</label>
              <input type="text" class="form-control" name="categoryTitle"  aria-describedby="emailHelp">
              
            </div>
            <div class="col-md-12">
              <label for="exampleInputEmail1" class="form-label">Kategori Açıklama</label>
              <input type="text" class="form-control" name="categoryDescription"  aria-describedby="emailHelp">
              
            </div>
          
            <div class="modal-footer">
              <button type="submit" class="btn btn-secondary" data-dismiss="modal" aria-hidden="true">Kapat</button>
              <button type="submit"  style="background-color: #1ABB9C;" class="btn btn-primary">Kaydet</button>
            </div>
            
          </form>
        </div>
        
      </div>
    </div>
  </div>




